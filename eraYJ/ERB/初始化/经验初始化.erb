@EXPNEED
;升级需要经验计算
#DIM NLEVEL
#DIM MAXLEVEL
MAXLEVEL = BASE:0:1
N=1
EXP:0:0 = 0

FOR NLEVEL,1,MAXLEVEL

IF NLEVEL < 10
	EXP:0:N = EXP:0:(N-1)+100
ELSEIF NLEVEL == 10
	EXP:0:N = 2333
ELSEIF NLEVEL < 20
	EXP:0:N = EXP:0:(N-1)+300
ELSEIF NLEVEL == 20
	EXP:0:N = 8888
ELSEIF NLEVEL < 30
	EXP:0:N = EXP:0:(N-1)+1000
ELSEIF NLEVEL == 30
	EXP:0:N = 23333
ELSEIF NLEVEL < 40
	EXP:0:N = EXP:0:(N-1)+2000
ELSEIF NLEVEL == 40
	EXP:0:N = 66666
ELSEIF NLEVEL < 50
	EXP:0:N = EXP:0:(N-1)+3000
ELSEIF NLEVEL == 50
	EXP:0:N = 123456
	
ELSE
ENDIF

N += 1
NEXT

RETURN