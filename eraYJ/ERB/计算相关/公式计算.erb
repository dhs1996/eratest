;模板计算
;1.玩家模板
@YXMB
#DIM MABL	;主属性
#DIM FABL	;副属性
#DIM BMUL 	;战斗力系数
TARGET = 0

CFLAG:2 = BASE:2
CFLAG:3 = BASE:3

;最终升级需要经验
CFLAG:19 = BASE:19 * EXP_MUL			;EXP_MUL在"全局.ERH"更改
FOR LOCAL,1,14

	;最终力敏智			  装备属性附加
	CFLAG:11 = BASE:11 + ITEM_INFO:(EQUIP:LOCAL):3
	CFLAG:12 = BASE:12 + ITEM_INFO:(EQUIP:LOCAL):4
	CFLAG:13 = BASE:13 + ITEM_INFO:(EQUIP:LOCAL):5

	;主属性判断
	SELECTCASE BASE:24
		CASE 1
			MABL = CFLAG:11
			FABL = CFLAG:12
		CASE 2
			FABL = CFLAG:11
			MABL = CFLAG:12
		CASE 3
			MABL = CFLAG:13
			FABL = CFLAG:13*3/10
		CASEELSE
	ENDSELECT

	;HP，MP，SP
	CFLAG:25 = BASE:25 + CFLAG:11*BASE:8
	CFLAG:26 = BASE:26 + CFLAG:13*BASE:9
	CFLAG:27 = BASE:27 + (MABL*3/10+FABL*3/10)/10
	
	;攻击力									装备属性附加
	CFLAG:15 = BASE:15+(MABL*8+FABL*4)/20 + ITEM_INFO:(EQUIP:LOCAL):1
	CFLAG:16 = BASE:15+(MABL*8+FABL*4)/10 + ITEM_INFO:(EQUIP:LOCAL):1

	;防御力									装备属性附加
	CFLAG:17 = BASE:17+(MABL*5+FABL*4)/25 + ITEM_INFO:(EQUIP:LOCAL):2
	CFLAG:18 = BASE:18+(MABL*5+FABL*4)/15 + ITEM_INFO:(EQUIP:LOCAL):2
NEXT
	
;战斗力
BMUL = 1
;BMUL = 1 + BUFF:		;BUFF影响，待完善
CFLAG:0  = ((CFLAG:11+CFLAG:12+CFLAG:13)*10+(CFLAG:15+CFLAG:16)*5+(CFLAG:17+CFLAG:18)*4)/50*BMUL


