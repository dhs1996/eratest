@MBATTLE
#DIM ATT
#DIM DFF
#DIM DAMAGE
#DIM MEETCHANCE

;遇怪率(FLAG:203为是否BOSS点判断)
MEETCHANCE = 0
IF MAP_ID == 001
	MEETCHANCE = 20		;遇怪率20%
	IF FLAG:203 == 1
		MEETCHANCE = 100
	ELSE
	ENDIF
	IF  RAND(1,100)<= MEETCHANCE
		FLAG:1 = 1
	ELSE
		FLAG:1 = 0
	ENDIF
ELSEIF MAP_ID == 003
	MEETCHANCE = 20
	IF FLAG:203 == 1
		MEETCHANCE = 100
	ELSE
	ENDIF
	IF  RAND(1,100)<= MEETCHANCE
		FLAG:1 = 1
	ELSE
		FLAG:1 = 0
	ENDIF
ENDIF


