;主城字符替换
@PRINT_MX_001, ARGS
	#DIMS MAP_MX
	#DIM MAP_D,2
	MAP_D:1 = STRLENS(ARGS)

	FOR MAP_D,0,MAP_D:1,2
		MAP_MX = %SUBSTRING(ARGS,MAP_D,2)%
		IF MAP_MX == "**"
			PRINTFORM %MAP_MX%
		ELSEIF MAP_MX == "  "
			PRINTFORM %MAP_MX%
		ELSEIF MAP_MX == "B0"
			PRINTFORM %B0%
		ELSEIF MAP_MX == "B "
			PRINTFORM %B0% 
		ELSEIF MAP_MX == " B"
			PRINTFORM  %B0%
		ELSEIF MAP_MX == "B*"
			PRINTFORM %B0%*
		ELSEIF MAP_MX == "*B"
			PRINTFORM *%B0%
		ELSEIF MAP_MX == "B2"
			PRINTFORM %B0%%B0%
		ELSEIF MAP_MX == "BH"
			PRINTFORM %B0%%H0%
		ELSEIF MAP_MX == "HB"
			PRINTFORM %H0%%B0%
		ELSEIF MAP_MX == "H "
			PRINTFORM %H0% 
		ELSEIF MAP_MX == "D0"
			PRINTFORM %D0%
		ELSEIF MAP_MX == "D1"
			PRINTFORM %D0%%D0%
		ELSEIF MAP_MX == "D2"
			PRINTFORM *%D0%
		ELSEIF MAP_MX == "D3"
			PRINTFORM %D0%*
		ELSEIF MAP_MX == "01"
			PRINTBUTTON "[王城]",001   ;王城
		ELSEIF MAP_MX == "02"
			PRINTBUTTON "[城外]",002
		ELSEIF MAP_MX == "N1"
			PRINTBUTTON "[向北]",021   ;向北移动
		ELSEIF MAP_MX == "S1"
			PRINTBUTTON "[向南]",022   ;向南移动
		ELSEIF MAP_MX == "E1"
			PRINTBUTTON "[向东]",023   ;向东移动
		ELSE
		ENDIF
	NEXT
	PRINTL












