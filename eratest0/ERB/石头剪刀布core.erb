@SYSTEM_TITLE
CALL TIME_DISPLY
@TIME_DISPLY
#DIM AI
$RESTART
PRINTL [1]开始游戏
INPUT
SIF RESULT!=1
	GOTO RESTART
PRINTL [0]拳
PRINTL [1]剪
PRINTL [2]布
INPUT
SELECTCASE RESULT
	CASE 0
		LOCALS+="0"
	CASE 1
		LOCALS+="1"
	CASE 2
		LOCALS+="2"
	CASEELSE
ENDSELECT
AI=RAND(0,2)
SELECTCASE AI
	CASE 0
		LOCALS+="0"
		PRINTL 对手出"拳"
	CASE 1
		LOCALS+="1"
		PRINTL 对手出"剪"
	CASE 2
		LOCALS+="2"
		PRINTL 对手出"布"
	CASEELSE
ENDSELECT
SELECTCASE LOCALS
	CASE "01","12","20"
		PRINTL 赢
	CASE "00","11","22"
		PRINTL 平
	CASE "10","21","02"
		PRINTL 输
CASEELSE
ENDSELECT
;清空对局情况
LOCALS=
PRINTW
GOTO RESTART

