;背包显示
;ARG:0为每页显示数，FLAG:1001为当前第一个,FLAG:1002为页码
@LIST_SHOW_ITEM,ARG
#DIM ITEM_ID
#DIM PACK_ID
#DIM NUM
PACK_ID = FLAG:1000
NUM = 0
LOCAL:1 = FLAG:1001
LOCAL:2 = LOCAL:1 + ARG

DRAWLINE
PRINTFORML \@ BUTTON_ITEM != 0 ? 物品名:%ISTR:BUTTON_ITEM:0,16,LEFT%#\@
PRINTFORML \@ BUTTON_ITEM != 0 ? 介绍:%ISTR:BUTTON_ITEM:1%#\@
PRINTFORM \@ BUTTON_ITEM != 0 ? 属性:#\@
CALL ITEM_BASE_PRINT,BUTTON_ITEM,PACK_ID
PRINTL
PRINTFORML \@ BUTTON_ITEM != 0 && ITEM_INFO:BUTTON_ITEM:0 >= 10 ? 数量:{PACK_USE:PACK_ID:2}#\@
DRAWLINE
PRINT 物品背包     
PRINTFORML 第{FLAG:1002}页
DRAWLINE
FOR LOCAL,FLAG:1001,FLAG:1001+20
	SIF LOCAL == PACK_ID
		SETCOLOR 0xFFFF00
	ITEM_ID = PACK_USE:LOCAL:1
	SIF ITEM_ID == 0
		BREAK
	PRINTFORML [{LOCAL,3}]%ISTR:ITEM_ID:0%
	NUM += 1
	RESETCOLOR
NEXT
FOR N,1,21-NUM
	PRINTL [???]无
NEXT

PACK_ID = RESULT
DRAWLINE
PRINTFORM \@FLAG:1002 > 1 ? [1000]上一页        #\@
PRINTFORML \@FLAG:1001 + LIST_SHOW_NUM < PACK_USED ? [1001]下一页#\@
PRINTFORML [000]返回
