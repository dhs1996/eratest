	ITEM_BASE:PACK_ID:2 = 233
	ITEM_BASE:PACK_ID:3 = 233
	ITEM_BASE:PACK_ID:6 = 233
;ID=1701,小树枝
ELSEIF ARG == 1701
	ITEM_BASE:PACK_ID:1 = 1
	ITEM_BASE:PACK_ID:2 = 1
	ITEM_BASE:PACK_ID:3 = 1
ELSE
ENDIF